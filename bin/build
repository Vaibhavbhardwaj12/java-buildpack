#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

echo "---> Java buildpack"

# fail fast
set -eo pipefail

BP_DIR=$(cd $(dirname $0)/..; pwd) # absolute path

# TODO bootstrap the binaries if need be...

export PATH="$PATH:$BP_DIR/bin"

maven-runner -platformDir ${1} -cacheDir ${2} -launchDir ${3} -goals "clean dependency:list install"

